@model IEnumerable<Ecommerce.Models.Ventas>
@{
    ViewBag.Title = "Pedidos";
}


<body class="body-wrapper version1">
    <div class="main-wrapper">
        <section class="lightSection clearfix pageHeader">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-title">
                            <h2 class="text-center">Tus pedidos</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="mainContent clearfix cartListWrapper">

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="cartListInner">
                            @foreach (var item in Model)
                            {

                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @(item.Status*25)%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="row">
                                    
                                        <div id="div1" class="col-md-3 ">
                                            <span class="fa fa-cloud-download"></span>
                                            <p>Proseso</p>
                                        </div>
                                        <div class="col-md-2 activestep">
                                            <span class="fa fa-pencil"></span>
                                            <p>Pagado</p>
                                        </div>
                                        <div class="col-md-3" onclick="javascript: resetActive(event, 40);">
                                            <span class="fa fa-refresh"></span>
                                            <p>Preparando envío</p>
                                        </div>
                                        <div class="col-md-2" onclick="javascript: resetActive(event, 60);">
                                            <span class="fa fa-dollar"></span>
                                            <p>Enviado</p>
                                        </div>
                                        <div class="col-md-2" onclick="javascript: resetActive(event, 80);">
                                            <span class="fa fa-cloud-upload"></span>
                                            <p>Entregado</p>
                                        </div>
         
                                </div>
                                <div class="card" style="border:solid 1px rgba(128, 128, 128, 0.5)!important; border-radius: 5px;">
                                    <div class="card-header">

                                        <div class="container">
                                            <div class="row">
                                                <div class="col align-self-start">
                                                    <h6> No. de Orden : @item.Id</h6>

                                                    <h6> Fecha de Orden: @item.FechaVenta</h6>
                                                </div>
                                                <div class="col align-self-center">
                                                    <h6> Total:   @item.Total</h6>
                                                </div>
                                                <div class="col align-self-end">
                                                    <a style="color:#007bff" href="@Url.Action("Detalle","Pedidos", new {id = item.Id})">Ver detalle</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title"></h5>
                                        <p class="card-text">Incluye @item.DetalleVentas.Sum(x => x.Cantidad) produto(s)</p>
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

</body>

<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
</div>

