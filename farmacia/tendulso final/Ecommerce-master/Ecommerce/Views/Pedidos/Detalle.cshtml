@model Ecommerce.Models.Ventas
@{
    ViewBag.Title = "Detalle";
}



<body class="body-wrapper version1">
    <div class="main-wrapper">
        <section class="lightSection clearfix pageHeader">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-title">


                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="mainContent clearfix cartListWrapper">

            <div class="container">
                <div class="row">
                    <a style="color:#007bff; font: 14px" href="@Url.Action("Pedidos","Compras")">< Tus pedidos</a>
                    <div class="col-12">
                        <div class="cartListInner">
                            <h1>Detalle del pedido</h1>

                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Status*25)%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="row">

                                <div id="div1" class="col-md-3 ">
                                    <span class="fa fa-cloud-download"></span>
                                    <p>Proseso</p>
                                </div>
                                <div class="col-md-2 activestep">
                                    <span class="fa fa-pencil"></span>
                                    <p>Pagado</p>
                                </div>
                                <div class="col-md-3" onclick="javascript: resetActive(event, 40);">
                                    <span class="fa fa-refresh"></span>
                                    <p>Preparando envío</p>
                                </div>
                                <div class="col-md-2" onclick="javascript: resetActive(event, 60);">
                                    <span class="fa fa-dollar"></span>
                                    <p>Enviado</p>
                                </div>
                                <div class="col-md-2" onclick="javascript: resetActive(event, 80);">
                                    <span class="fa fa-cloud-upload"></span>
                                    <p>Entregado</p>
                                </div>

                            </div>
                            <br />
                            <span>Pedido No.: @Model.Id</span>
                            <br />
                            <span>Realizado el : @Model.FechaVenta</span>
                            <br />
                            <br />
                            <div class="card">
                                <h3>Tu pedido será enviado a:</h3>
                                <div class="card-body" style="border-radius: 5px; width: 40rem;">


                                    <p>@Model.Clientes.Calle, @Model.Clientes.NoExterior, @Model.Clientes.Colonia, @Model.Clientes.CodigoPostal, @Model.Clientes.Estado, @Model.Clientes.Municipio</p>


                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />

                            <div class="card" style="border:solid 1px rgba(128, 128, 128, 0.5)!important; border-radius: 5px;">
                                <div class="card-header">
                                    Incluye @Model.DetalleVentas.Sum(x => x.Cantidad) producto(s)
                                </div>

                                <div class="card-body">
                                    @foreach (var productos in Model.DetalleVentas)
                                    {
                                        <div class="row align-items-end">
                                            <div class="col">
                                                <img src="~/Content/@productos.Productos.Url_image" width="60" />


                                                <h6>@productos.Productos.Nombre</h6>
                                            </div>
                                            <div class="col">

                                                <h6>Cantidad: @productos.Cantidad</h6>
                                            </div>
                                            <div class="col">
                                                <h6> Precio: $ @productos.PrecioProd</h6>
                                            </div>
                                            <div class="col">
                                                <h6> Subtotal: $ @productos.Subtotal</h6>
                                            </div>
                                        </div>

                                        <br />
                                        <br />
                                        <hr />
                                        <br />
                                        <br />

                                    }
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body" style="border:solid 1px rgba(128, 128, 128, 0.5)!important; border-radius: 5px;">
                                    <div class="row justify-content-between">
                                        <div class="col-4">
                                            <h5>Total a pagar </h5>
                                        </div>
                                        <div class="col-4">
                                            <h5>$ @Model.Total</h5>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>

